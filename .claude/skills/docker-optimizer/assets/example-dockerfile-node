# Example Dockerfile - Node.js Application (Optimized)
# Multi-stage build for minimal production image

# ============================================
# Stage 1: Builder
# ============================================
FROM node:20-alpine AS builder

# Metadata
LABEL stage=builder

# Set working directory
WORKDIR /app

# Install build dependencies
# Only if needed (uncomment if required)
# RUN apk add --no-cache --virtual .build-deps \
#     python3 make g++

# Copy package files
COPY package*.json ./

# Install dependencies
# Use npm ci for reproducible builds (respects package-lock.json)
RUN npm ci --only=production && \
    npm cache clean --force

# Copy source code
COPY . .

# Build the application
RUN npm run build

# Clean up unnecessary files
RUN rm -rf src/ tests/ docs/ .prettierrc .eslintrc* tsconfig.json

# ============================================
# Stage 2: Runtime (Final Image)
# ============================================
FROM node:20-alpine

# Metadata
LABEL maintainer="your-team@example.com"
LABEL version="1.0.0"
LABEL description="Optimized Node.js application"

# Set environment variables
ENV NODE_ENV=production \
    NODE_OPTIONS="--max-old-space-size=256" \
    PORT=3000

# Security: Create non-root user
# Use numeric UID/GID for better compatibility
RUN addgroup -g 1001 -S nodejs && \
    adduser -u 1001 -S nodejs -G nodejs

# Set working directory
WORKDIR /app

# Copy node_modules from builder
COPY --from=builder --chown=nodejs:nodejs /app/node_modules ./node_modules

# Copy package files
COPY --chown=nodejs:nodejs package*.json ./

# Copy built application
COPY --from=builder --chown=nodejs:nodejs /app/dist ./dist

# Optional: Copy static assets
# COPY --from=builder --chown=nodejs:nodejs /app/public ./public

# Create directory for logs if needed
RUN mkdir -p /app/logs && chown -R nodejs:nodejs /app/logs

# Switch to non-root user
USER nodejs

# Expose port
EXPOSE ${PORT}

# Health check
# Adjust the endpoint to match your application
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:${PORT}/health', (r) => {if (r.statusCode !== 200) throw new Error(r.statusCode)})" || exit 1

# Start the application
CMD ["node", "dist/index.js"]

# ============================================
# Build instructions
# ============================================
# Build: docker build -t myapp:1.0.0 .
# Build with args: docker build --build-arg NODE_ENV=production -t myapp:1.0.0 .
# Run: docker run -p 3000:3000 myapp:1.0.0
# Check user: docker run myapp:1.0.0 id
# ============================================
