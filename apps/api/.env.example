# Database
DATABASE_URL="postgresql://speechflow:password@localhost:5432/speechflow"

# Redis
REDIS_URL="redis://localhost:6379"

# MinIO / S3
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="admin"
S3_SECRET_KEY="adminpassword"
S3_BUCKET_UPLOADS="uploads"
S3_BUCKET_PDFS="pdfs"
S3_BUCKET_TEMP="temp"

# JWT Configuration
JWT_SECRET="super-secret-jwt-key-change-in-production-minimum-32-characters"
JWT_EXPIRATION="7d"

# Application
PORT=4000
NODE_ENV="development"
FRONTEND_URL="http://localhost:3000"

# Email (Resend) - Optionnel
# RESEND_API_KEY=re_xxxxxxxxxxxxx
# EMAIL_FROM=noreply@yourdomain.com

# OpenRouter (for LLM) - Optionnel
# OPENROUTER_API_KEY=sk-or-xxxxxxxxxxxxx

# Worker
WORKER_CONCURRENCY=2
